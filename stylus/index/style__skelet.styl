.container{
    background-color: lienzo;
    border-radius: 30px;
    display: grid;
    grid-template-rows: 350px auto;
    position relative;
    left: 2.5%;
    top: 2.5%;
    height 95%;
    min-height: 900px;
    max-height: 900px;
    width: 95%;    
	@media ({$lg}) {
        grid-column:2
        left: auto;
        right: auto;	
		width: 1200px;
	}
    @media ({$mddesc}) {
			
	}
    @media ({$smdesc}) {
			
	}
	@media ({$xs}) {
        left: 0;
        top: 0;
	 	width: 100%;	
	}
}
#banner{
    grid-row 1;
    display: grid;
    grid-template-columns: auto 90% auto;
    grid-template-rows: auto 90% auto;
    @media ({$lg}) {
        grid-template-columns: auto 900px auto;
    }
}
.banner{
    &_img{
        grid-row 2;
        grid-column: 2;
        background-image: url("../img/fodos/bogota.jpg");
        background-size: 100%;
        border-radius: 30px;
        display: grid;
        grid-template-columns: 30% auto;
        &_px{
            grid-column: 1;  
            display: grid;
            grid-template-rows: auto 50% auto;
            .content{
                grid-row 2;
                color: base;
                text-align: center;
            }
        }
    }//END=>&_img
    &_card{
        position: absolute;
        margin-top: 250px;
        left: 65%;
    }//END=>_card
    &_grados{
        background-color: lienzo;
        border-radius: 0 20px 20px 0;
        box-shadow: $shadow;
        position: absolute;
        left:0;
        top: 100px;
        height: 150px;
        width: 100px;
