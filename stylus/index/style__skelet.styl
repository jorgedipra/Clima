.card_clima{
    background-color: lienzo;
    border-radius: 20px;
    box-shadow: $shadow;
    width: 220px;
    height: 120px;
}
#content{
    grid-row 2;
    display: grid;
    grid-template-columns: 5% 20% 20% 20% 220px auto;
}
.content{
    &_one{
        display: grid;
        grid-template-rows: 80px auto auto auto;
    }
    &_two{
        display: grid;
        grid-template-rows: 80px auto;
    }
    &_three{
        display: grid;
        grid-template-rows: 80px 80px auto;
    }
    &_four{
        display: grid;
        grid-template-rows: 200px  auto;
    }
}